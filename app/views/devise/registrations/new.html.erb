
<div class="jumbotron text-center">
  <h1 class="display-4">アカウントを作成</h1>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field">
      <%= f.label :名前 %><br />
      <%= f.text_field :name, autofocus: true,class: "form-label-group form" %>
    </div>

    <div class="field mt-2">
      <%= f.label :メールアドレス %><br />
      <%= f.email_field :email, autocomplete: "email",class: "form-label-group form" %>
    </div>

    <div class="field mt-2">
      <%= f.label :パスワード %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password",class: "form-label-group form" %>
    </div>

    <div class="field mb-3 mt-2">
      <%= f.label :パスワード（確認）%><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password",class: "form-label-group form" %>
    </div>

    <div class="field mb-2">
      <label for="js_presentImg" class="btn btn-info form">
        <span>アイコン画像の設定(任意)</span>
        <%= f.file_field :avatar, id: :js_presentImg, autofocus: true, class:"form-control-file", style: "display:none;" %>
      </label>
    </div>


    <%= f.submit "登録",class: "btn btn-primary form" %>
  <% end %>
</div>